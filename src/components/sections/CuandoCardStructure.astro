---
interface Titles {
    title: string;
    subtitle: string;
    description: string;
}
const { title, subtitle, description } = Astro.props;
---

<section class="relative z-20">
    <slot name="img"/>
    <div class="absolute w-full bottom-5 text-white px-4 text-center flex flex-col z-20">
        <h3 class="text-base ps:text-xl font-sf-bold">{subtitle}</h3>
        <h2 class="text-2xl leading-7 ps:text-3xl font-sf-medium ps:leading-9">{title}<slot name="span"/></h2>
        <p class="mt-3 ps:mt-5 text-sm leading-5 ps:leading-5 ps:text-base ps:text-balance">{description}</p>
    </div>
    <slot/>
</section>