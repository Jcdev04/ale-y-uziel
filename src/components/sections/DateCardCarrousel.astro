---
import { Image } from "astro:assets"

interface Names {
    title: string
    subtitle: string
    img: string
    buttons : any
}

const { title, subtitle, img,
    button } = Astro.props

---
<div class="w-full h-full hidden duration-200 ease-in-out" data-carousel-item>
    <div class="w-full h-full relative flex flex-col items-center text-white">
        <Image class="object-cover object-center h-full w-full" src={img} alt="image carousel"/>
        <div class="z-20 absolute w-full bottom-5 space-y-1">
            <h3 class="font-bold text-3xl">{title}</h3>
            <p class="text-sm">{subtitle}</p>
            <section class="z-20 flex justify-center items-center gap-3">
                <a href={button.izquierdaHref} class="py-1 text-sm px-2 rounded-full bg-primary transition-all duration-150 hover:opacity-80">Saber m√°s</a>
                <a target="_blank" href={button.derecha?.href} class="text-sm hover:opacity-80 transition-all duration-150">{button?.derecha.text}</a>
            </section>
        </div>
        <section class="w-full bottom-0 absolute bg-gradient-to-t from-stone-950 to-transparent h-1/2"><section/>
    </div>
</div>
