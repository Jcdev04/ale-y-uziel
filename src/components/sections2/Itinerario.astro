---
import SectionContainer from "../SectionContainer.astro";
import ItinerarioCard from "./ItinerarioCard.astro";
const cards = [
    {
        title: "Nos casamos",
        emoji: "💍",
        description: "Celebremos en la Hacienda San Juan Pueblilla",
        timeStart: "4:00p.m.",
        timeEnd: "5:30p.m.",
    },
    {
        title: "Cocktail",
        emoji: "🍸",
        description: "Es tiempo para socializar, saludar y enfiestarse",
        timeStart: "6:00p.m.",
        timeEnd: "7:15p.m.",
    },
    {
        title: "Recepción al Banquete",
        emoji: "🤩",
        description: "Es tiempo para socializar, saludar y empezar a enfiestarse",
        timeStart: "6:45p.m.",
        timeEnd: "7:45p.m.",
    },
    {
        title: "Entrada de los novios",
        emoji: "👰🏻‍♀️",
        description: "Festejemos a los novios con un brindis",
        timeStart: "7:00p.m.",
        timeEnd: "8:00p.m.",
    },
    {
        title: "Cena",
        emoji: "🍝",
        description: "Vámonos preparando para la fiesta",
        timeStart: "7:10p.m.",
        timeEnd: "8:15p.m.",
    },
    {
        title: "Baile de esposos",
        emoji: "❤️",
        description: "Celebremos el amor con el primer baile en matrimonio",
        timeStart: "8:10p.m.",
        timeEnd: "9:30p.m.",
    },
    {
        title: "Que siga la fiesta",
        emoji: "💃🏻",
